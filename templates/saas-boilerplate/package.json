{
  "name": "saas-boilerplate",
  "version": "0.3.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "generate": "cd packages/database && pnpm run generate",
    "migrate": "cd packages/database && pnpm run migrate",
    "reset": "cd packages/database && pnpm run reset"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "happy-dom": "^20.7.0",
    "jsdom": "^28.1.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.7.3",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "developer",
    "saas",
    "boilerplate",
    "full-stack",
    "turborepo",
    "nextjs"
  ],
  "author": "Anoop Karnik",
  "license": "MIT",
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "archiver": "^7.0.1"
  }
}